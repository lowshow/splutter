{
	"mount": {
		"src": "/",
		"modules/opus-recorder/dist/encoder": "/encoder"
	},
	"buildOptions": {
		"installTypes": true
	},
	"plugins": [
		[
			"@snowpack/plugin-run-script",
			{
				"cmd": "tsc --build tsconfig.json",
				"watch": "$1 --watch"
			}
		]
	],
	"installOptions": {
		"sourceMap": true
	},
	"experiments": {
		"optimize": {
			"entrypoints": ["splutter.js"],
			"bundle": true,
			"minify": true,
			"target": "es2020"
		}
	},
	"exclude": [
		"example"
	]
}